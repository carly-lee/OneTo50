{
  "presets": ["react-native"],
  "plugins": ["transform-flow-strip-types",
              ["module-resolver", {
                "cwd": "babelrc",
                "root": ["./src"],
                "extensions": [".js"],
                "alias": {
                  "components": "./src/components",
                  "containers": "./src/containers",
                  "constants" : "./src/constants",
                  "utils": "./src/utils"
                }
              }]
    ]
}
